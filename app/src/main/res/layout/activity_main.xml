<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="KALKULATOR GRADE UNIVERITAS XYZ KOTA TIMAH"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="ABSEN  :"
            android:textAlignment="center"
            android:textColor="#304FFE"
            android:textSize="20sp"
            tools:text="ABSEN  : " />

        <EditText
            android:id="@+id/absen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Nilai Absensi(0-100)"
            android:ems="10"
            android:hint="Nilai Absensi(0-100)"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1E1D1D"
            tools:text="Nilai Absensi(0-100)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="TUGAS  : "
            android:textAlignment="center"
            android:textColor="#304FFE"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Nilai Tugas (0-100)"
            android:ems="10"
            android:hint="Nilai Tugas (0-100)"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#151515"
            tools:text="Nilai Tugas (0-100)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UTS"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text=" UTS       : "
            android:textAlignment="center"
            android:textColor="#304FFE"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/uts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Nilai UTS(0-100)"
            android:ems="10"
            android:hint="Nilai UTS(0-100)"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#050505"
            tools:text="Nilai UTS(0-100)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=" UAS       : "
            android:textAlignment="center"
            android:textColor="#304FFE"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/uas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Nilai UAS(0-100)"
            android:ems="10"
            android:hint="Nilai UAS(0-100)"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#050505"
            tools:text="Nilai UAS(0-100)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:accessibilityLiveRegion="none"
        android:backgroundTintMode="multiply"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="161dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:accessibilityLiveRegion="none"
            android:autoText="true"
            android:background="#2962FF"
            android:onClick="hitung"
            android:rotationX="4"
            android:text="HITUNG"
            android:textAlignment="center"
            android:textColor="#F8F5F5"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="HITUNG" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasil"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="HASIL NILAI AKHIR"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>